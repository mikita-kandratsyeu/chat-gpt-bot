{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"],
      "@bot/*": [
        "./src/*"
      ],
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"],
}
