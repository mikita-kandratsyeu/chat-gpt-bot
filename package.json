{
  "name": "telegram-bot",
  "version": "1.0.1",
  "main": "index.js",
  "repository": "git@github.com:mikita-kandratsyeu/telegram-bot.git",
  "author": "Mikita Kandratsyeu <nickondr.production@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build:prod": "tsc && tsc-alias -p tsconfig.build.json && copyfiles -u 1 -e \"**/*.ts\" \"./src/locales/**/*.ftl\" \"./build\" --flatten",
    "start:prod": "yarn run build:prod && cross-env NODE_ENV=production node build/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint . --ext .ts --ignore-pattern node_modules/",
    "lint:fix": "eslint . --ext .ts --ignore-pattern node_modules/ --fix",
    "lint:ci": "eslint . --plugin file-progress --rule \"file-progress/activate: 0\" --ext .ts --ignore-pattern node_modules/"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@grammyjs/conversations": "^1.1.1",
    "@grammyjs/i18n": "^1.0.1",
    "@grammyjs/menu": "^1.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/storage-mongodb": "^2.2.0",
    "axios": "^1.3.6",
    "copyfiles": "^2.4.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.3",
    "fluent-ffmpeg": "^2.1.2",
    "grammy": "^1.16.0",
    "mongoose": "^7.1.0",
    "node-cache": "^5.1.2",
    "openai": "^3.2.1",
    "typescript": "^5.0.4",
    "winston": "^3.8.2",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": "18.x"
  }
}
